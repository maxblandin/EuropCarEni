<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mbrb.eni.com.locationeuropcar.ecran.ConnexionFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_identifiant"/>

    <EditText
        android:id="@+id/identifiant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_mot_de_passe"/>

    <EditText
        android:id="@+id/mot_de_passe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/lbl_confirmer_mdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_confirmer_mot_de_passe"
        android:visibility="gone"/>/>

    <EditText
        android:id="@+id/confirmer_mot_de_passe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">

        <Button
            android:id="@+id/se_connecter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_se_connecter"/>

        <Button
            android:id="@+id/inscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_sinscrire"/>

        <Button
            android:id="@+id/valider_inscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_inscription"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>
